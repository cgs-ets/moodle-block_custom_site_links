{{!
    @template block_custom_site_links/content

    Custom Site Links block content template.
    
    Example context (json):                                                                                                         
    {
        "instanceid": "86",
        "iconlinks": [
            { "icon": "https://via.placeholder.com/50", "label": "CGS Website","url": "https://cgs.act.edu.au", "target": 1 },
            { "icon": "https://via.placeholder.com/50", "label": "Drive","url": "https://drive.google.com", "target": 1 }
        ],
        "textlinks": [
            { "label": "Daily Notes", "url": "/daily-notes", "target": 0 },
            { "label": "DocMan Uploader", "url": "/Uploader", "target": 0 }
        ],
        "linktypes": "types-both"
    }
}}
<div class="block_custom_site_links {{linktypes}} {{linknumber}}" data-region="block_custom_site_links-instance-{{instanceid}}">
    <div class="iconcolumn">
        <ul class="icon-button-grid">
            {{#iconlinks}}
            <li>
                <a href="{{url}}" target="{{target}}" title="{{label}}">
                    <img class="btnicon" src="{{icon}}" alt="{{label}}" />
                    <span class="button-text">{{label}}</span>
                </a>
            </li>
            {{/iconlinks}}
        </ul>
    </div>
    <div class="textlinks">
        <ul>
            {{#textlinks}}
            <li>
                <a href="{{url}}" target="{{target}}" title="{{label}}">{{label}}</a>
            </li>
            {{/textlinks}}
        </ul>
    </div>
</div>